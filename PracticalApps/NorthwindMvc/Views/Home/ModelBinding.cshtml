@model NorthwindMvc.Models.HomeModelBindingViewModel
@{
    ViewData["Title"] = "Model Binding Demo";
}

<h1>@ViewData["Title"]</h1>
<div>Enter Details For your thing in the following form:</div>
<form action="/home/modelbinding/2?id=3" method="post">
    <input name="id" value="1">
    <input name="colour" value="Red">
    <input type ="submit">
</form>
@if (Model != null)
{
    <h2>Submitted Thing</h2>
    <hr />
    <div >
        <dl class="dl-horizontal">
            <dt>Model.Thing.ID</dt>
            <dd>@Model.Thing.ID</dd>
            <dt>Model.Thing.Colour</dt>
            <dd>@Model.Thing.Colour</dd>
        </dl>
    </div>
    @if (Model.HasErrors)
    {
        foreach (string errormessage in Model.ValidationErrors)
        {
            <div class="alert alert-danger" role="alert">@errormessage</div>
        }
    }
}